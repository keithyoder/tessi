<div class="card">
  <%= render '/shared/table_header', {new_path: new_plano_enviar_atributo_path, titulo: "Radius Enviar", search_field: :atributo_cont} %>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Plano</th>
            <th>Atributo</th>
            <th>Op</th>
            <th>Valor</th>
          </tr>
        </thead>

        <tbody>
          <% @plano_enviar_atributos.each do |plano_enviar_atributo| %>
            <tr>
              <td><%= plano_enviar_atributo.plano.nome %></td>
              <td><%= link_to plano_enviar_atributo.atributo, plano_enviar_atributo %></td>
              <td><%= plano_enviar_atributo.op %></td>
              <td><%= plano_enviar_atributo.valor %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
