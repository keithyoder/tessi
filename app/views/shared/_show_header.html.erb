<div class="card-header">
  <div class="row">
  <div class="col-sm">
    <h3>
    <%= link_to({controller: controller.controller_name, action: :index}, class: "btn btn-sm btn-outline-dark") do %>
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
    <% end %>
    <% if can? :update, object %>
      <%= link_to({controller: controller.controller_name, action: :edit, id: object}, class: "btn btn-sm btn-outline-dark") do %>
        <i class="fas fa-pencil-alt fa-lg" aria-hidden="true"></i>
      <% end %>
    <% end %>
    <%= defined?(titulo) ? titulo : object.model_name.singular.capitalize + ' ' + object.nome %></h3>
  </div>
  <div class="d-print-none col-sm-2" align=right>
    <%= link_to(current_page_params.merge(format: :pdf), class: "btn btn-sm btn-outline-dark", target: "_blank") do %>
      <i class="fa fa-print fa-lg" aria-hidden="true"></i>
    <% end %>
  </div>
  </div>
</div>
