
<%= simple_form_for(@ponto) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col">
        <%= f.input :nome %>
      </div>
      <div class="col">
        <%= f.input :sistema, collection: Ponto.sistemas.keys %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :tecnologia, collection: Ponto.tecnologias.keys %>
      </div>
      <div class="col">
        <%= f.association :servidor, label_method: :nome %>
      </div>
      <div class="col">
        <%= f.input :ip, as: :string %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :usuario %>
      </div>
      <div class="col">
        <%= f.input :senha %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
