<h1 class="page-header">Estados</h1>
<%= link_to 'Novo Estado', new_estado_path %>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Nome</th>
      <th>IBGE</th>
    </tr>
  </thead>

  <tbody>
    <% @estados.each do |estado| %>
      <tr>
        <td><%= estado.sigla %></td>
        <td><%= link_to estado.nome, edit_estado_path(estado) %></td>
        <td><%= estado.ibge %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
