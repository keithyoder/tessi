<h1 class="page-header"><%= new_table_header(new_estado_path)%> Estados</h1>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Nome</th>
      <th>IBGE</th>
    </tr>
  </thead>

  <tbody>
    <% @estados.each do |estado| %>
      <tr>
        <td><%= estado.sigla %></td>
        <td><%= link_to estado.nome, estado %></td>
        <td><%= estado.ibge %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @estados %>
</div>
<br>
