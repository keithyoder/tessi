<h1 class="page-header"><%= link_to '<i class="fa fa-plus fa-lg" aria-hidden="true"></i>'.html_safe, new_estado_path, class: "btn btn-primary" %>
Estados</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Nome</th>
      <th>IBGE</th>
    </tr>
  </thead>

  <tbody>
    <% @estados.each do |estado| %>
      <tr>
        <td><%= estado.sigla %></td>
        <td><%= link_to estado.nome, edit_estado_path(estado) %></td>
        <td><%= estado.ibge %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @estados %>
</div>
<br>
