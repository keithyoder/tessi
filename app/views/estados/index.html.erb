<div class="card">
  <%= render '/shared/table_header', {object: @estados, search_string: :sigla_or_nome_cont} %>
  <div class="card-body">
  <div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Sigla</th>
        <th>Nome</th>
        <th>IBGE</th>
      </tr>
    </thead>
  
    <tbody>
      <% @estados.each do |estado| %>
        <tr>
          <td><%= estado.sigla %></td>
          <td><%= link_to estado.nome, estado %></td>
          <td><%= estado.ibge %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @estados %>
  </div>
  </div>
</div>
