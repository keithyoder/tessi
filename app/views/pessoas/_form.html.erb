
<%= simple_form_for(@pessoa) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :tipo %>
    <%= f.input :cpf %>
    <%= f.input :cnpj %>
    <%= f.input :rg %>
    <%= f.input :ie %>
    <%= f.input :nascimento %>
    <%= f.association :logradouro %>
    <%= f.input :numero %>
    <%= f.input :complemento %>
    <%= f.input :nomemae %>
    <%= f.input :email %>
    <%= f.input :telefone1 %>
    <%= f.input :telefone2 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
