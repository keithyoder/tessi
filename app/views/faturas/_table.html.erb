<div class="card">
  <% params = defined?(params) ? params : {} %>
  <%= render '/shared/table_header', {object: @faturas, params: params} %>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <% if !defined?(exclude) or exclude != 'pessoa' %>
              <th>Assinante</th>
            <% end %>
            <th>Parcela</th>
            <th>Vencimento</th>
            <th>Liquidação</th>
            <th>Valor</th>
            <th>Nosso Número</th>
            <th>Retornos</th>
          </tr>
        </thead>
        <tbody>
          <% @faturas.each do |fatura| %>
            <tr>
              <% if !defined?(exclude) or exclude != 'pessoa' %>
                <td><%= fatura.pessoa.nome %></td>
              <% end %>
              <td><%= fatura.parcela %></td>
              <td><%= link_to I18n.l(fatura.vencimento), fatura %></td>
              <td><%= I18n.l(fatura.liquidacao, default: '') %></td>
              <td><%= number_to_currency(fatura.valor) %></td>
              <td><%= fatura.nossonumero %></td>
              <td><small>
              <% if fatura.registro.present? %>
                <span class="badge badge-success">Registrada</span>
              <% end %>
              <% if fatura.retorno.present? %>
                <span class="badge badge-dark">Liquidada</span>
              <% end %>              
              <% if fatura.baixa.present? %>
                <span class="badge badge-warning">Baixada</span>
              <% end %>              
              </small></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @faturas %>
  </div>
</div>
