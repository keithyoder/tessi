
<%= simple_form_for(@plano) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :mensalidade %>
    <%= f.input :upload %>
    <%= f.input :download %>
    <%= f.input :burst %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
