
<%= simple_form_for(@pagamento_perfil) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col">
        <%= f.input :nome %>
      </div>
      <div class="col">
        <%= f.input :tipo, collection: PagamentoPerfil.tipos.keys %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :banco %>
      </div>
      <div class="col">
        <%= f.input :agencia %>
      </div>
      <div class="col">
        <%= f.input :conta %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :cedente %>
      </div>
      <div class="col">
        <%= f.input :carteira %>
      </div>
      <div class="col">
        <%= f.input :variacao %>
      </div>
      <div class="col">
        <%= f.input :sequencia %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= button_tag(:class => "btn btn-primary") do %>
      <i class="fas fa-save" aria-hidden="true"></i> Salvar
    <% end %>
  </div>
<% end %>
