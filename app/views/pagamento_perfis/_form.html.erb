
<%= simple_form_for(@pagamento_perfil) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :tipo %>
    <%= f.input :cedente %>
    <%= f.input :agencia %>
    <%= f.input :conta %>
    <%= f.input :carteira %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
